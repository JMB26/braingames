{% extends 'base.html.twig' %}

{% block title %}Categories index
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="fs-2 col-6 text-center m-3">
				Gestion des Cat√©gories de Produits...
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="fs-4 col-4 text-center m-3">

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.nom }}</td>
								<td>									
									<a href="{{ path('app_categories_edit', {'id': category.id}) }}">Modifier</a>
                                    <a href="{{ path('app_categories_delete', {'id': category.id}) }}">Supprimer</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a href="{{ path('app_categories_new') }}">Create new</a>
			</div>
		</div>
	</div>
{% endblock %}

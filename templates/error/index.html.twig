{% extends 'base.html.twig' %}

{% block title %}Hello ErrorController!
{% endblock %}

{% block body %}


	<section class="single-post-content">
		<div class="container">
			<div class="row">
				<div class="mt-4 py-5 px-3 text-center">
					{% if app.request.attributes.get('exception').statusCode == '404' %}
						<div class="fs-2 text-center m-3">
							ERREUR 404
						</div>
						<div class="fs-3 text-center m-3">
							La page que vous recherchez n'existe pas... ou plus !
						</div>
					{% elseif app.request.attributes.get('exception').statusCode == '403' %}
						<div class="fs-2 text-center m-3">
							ERREUR 403
						</div>
						<div class="fs-3 text-center m-3">
							Vous ne pouvez pas afficher cette page ou cette section !
						</div>
					{% elseif app.request.attributes.get('exception').statusCode == '500' %}
						<div class="fs-2 text-center m-3">
							ERREUR 500
						</div>
						<div class="fs-4 text-center m-3">
							Oups !?! Alors là, on a un problème... La page ou la section ne s'affiche pas.
						</div>
						<div class="fs-4 text-center m-3">
							Si vous avez 2 minutes, merci de prévenir l'administrateur du site depuis la page
							<a href="{{ path('app_contact') }}">contact</a>.
						</div>
					{% else %}
						<div class="fs-4 text-center m-3">
							Oups !?! Désolé, il y a une erreur.
						</div>
						<div class="fs-4 text-center m-3">
							Si vous avez 2 minutes, merci de prévenir l'administrateur du site depuis la page
							<a href="{{ path('app_contact') }}">contact</a>.
						</div>
					{% endif %}
				</div>

				<div class="mt-3 text-center">
					<a class="btn btn-primary p-3" href="{{ path('app_home') }}">Page d'accueil</a>
				</div>
			</div>
		</div>
	</section>

{% endblock %}

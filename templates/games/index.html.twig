{% extends 'base.html.twig' %}

{% block title %}Games index
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="fs-2 col-6 text-center m-3">
				Gestion des Produits...
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="fs-4 col-12 text-center m-3">

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Mark</th>
							<th>Nom</th>
							<th>Isbn</th>
							<th>Age</th>
							<th>Img</th>
							<th>Txt</th>
							<th>Note</th>
							<th>Status</th>
							<th>Date</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for game in games %}
							<tr>
								<td>{{ game.id }}</td>
								<td>{{ game.mark }}</td>
								<td>{{ game.nom }}</td>
								<td>{{ game.isbn }}</td>
								<td>{{ game.age }}</td>
								
								<td><img src="{{ asset('imagestest/' ~ game.img ) }}" alt="" style="width:100px"></td>
								<td>{{ game.txt }}</td>
								<td>{{ game.note }}</td>
								<td>{{ game.status ? 'Yes' : 'No' }}</td>
								<td>{{ game.date ? game.date|date('Y-m-d H:i:s') : '' }}</td>
								<td>									
									<a href="{{ path('app_games_edit', {'id': game.id}) }}">Modifier</a>
                                    <a href="{{ path('app_games_show', {'id': game.id}) }}">Supprimer</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="11">Aucun produit trouv√©</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a href="{{ path('app_games_new') }}">Enregistrer un nouveau Jeu</a>

			</div>
		</div>
	</div>
{% endblock %}

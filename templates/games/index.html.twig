{% extends 'base.html.twig' %}

{% block title %}Games index{% endblock %}

{% block body %}
    <h1>Games index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mark</th>
                <th>Nom</th>
                <th>Isbn</th>
                <th>Age</th>
                <th>Img</th>
                <th>Txt</th>
                <th>Note</th>
                <th>Status</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.mark }}</td>
                <td>{{ game.nom }}</td>
                <td>{{ game.isbn }}</td>
                <td>{{ game.age }}</td>
                <td>{{ game.img }}</td>
                <td>{{ game.txt }}</td>
                <td>{{ game.note }}</td>
                <td>{{ game.status ? 'Yes' : 'No' }}</td>
                <td>{{ game.date ? game.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_games_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_games_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_games_new') }}">Create new</a>
{% endblock %}

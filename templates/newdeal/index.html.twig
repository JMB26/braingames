{% extends 'base.html.twig' %}

{% block title %}Nouvel Echange
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="fs-2 col-6 text-center m-3">
				Proposer un échange de ce jeu ou...
			</div>
			<div class="fs-2 col-6 text-center m-3">
				<form action="{{ path('app_echange') }}" method="POST">
					<input type="hidden" id="seller" name="seller" value="{{swapsell.id}}">
					<button type="submit" class="d-grid btn btn-outline-success mx-auto">Selectionner un autre jeu</button>
				</form>
			</div>


			<div class="fs-6 text-center m-3">
				<table class="table">
					<thead>
						<tr>
							<th scope="col" class="fdtitre"></th>
							<th scope="col" class="fdtitre">Marque</th>
							<th scope="col" class="fdtitre">Modèle</th>
							<th scope="col" class="fdtitre">Catégorie</th>
							<th scope="col" class="fdtitre">Descriptif</th>
							<th scope="col" class="fdtitre">Etat</th>
							<th scope="col" class="fdtitre">Age</th>
							<th scope="col" class="fdtitre">Statut</th>
						</tr>
					</thead>

					<tbody>
						<tr>
							<td>
								{% if gamesell.img is defined and gamesell.img is not null %}

									<img src="{{ asset('images-test/' ~ gamesell.img ) }}" alt="" style="width:100px">
								{% else %}
									<img src="{{ asset('images-test/defaultImg.jpg') }}" alt="" style="width:100px">
								{% endif %}
							</td>

							<td>{{ gamesell.mark }}</td>
							<td>{{ gamesell.nom }}</td>
							<td>{{gamesell.idcat.nom}}</td>

							<td>{{ gamesell.txt|u.truncate(15) }}...</td>

							<td>{{ etatgamesell}}</td>
							<td>{{ gamesell.age }}</td>

							<td>
								En attente d'échange
							</td>
						</tr>

						<tr class="bg-light">
							<th scope="col" colspan="1" class="fs-3 text-center"><img src="{{asset('assets/img/swap-icon-2.jpg') }}" alt=""></th>
							<th scope="col" colspan="6" class="fs-3 text-center">Avec le votre.</th>
							<th scope="col" colspan="1" class="fs-3 text-center"><img src="{{asset('assets/img/swap-icon-1.jpg') }}" alt=""></th>
						</tr>

						<tr>
							<td>
								{% if gamebuy.img is defined and gamebuy.img is not null %}

									<img src="{{ asset('images-test/' ~ gamebuy.img ) }}" alt="" style="width:100px">
								{% else %}
									<img src="{{ asset('images-test/defaultImg.jpg') }}" alt="" style="width:100px">
								{% endif %}
							</td>

							<td>{{ gamebuy.mark }}</td>
							<td>{{ gamebuy.nom }}</td>
							<td>{{gamebuy.idcat.nom}}</td>

							<td>{{ gamebuy.txt|u.truncate(15) }}...</td>

							<td>{{ etatgamebuy }}</td>
							<td>{{ gamebuy.age }}</td>

							<td>
								En attente d'échange
							</td>
						</tr>

						<tr>
							<td></td>
							<td colspan="6" class="fs-4 text-center">Votre Message</td>
							<td></td>
						</tr>

						<form action="{{ path('app_newdeal') }}" method="POST">
							<tr>
								<td></td>
								<td colspan="6" class="fs-4 text-center">
									<textarea name="txt" class="form-control m-3" id="message" rows="3">Bonjour,</textarea>
									<input type="hidden" id="seller" name="seller" value="{{swapsell.id}}">
									<input type="hidden" id="idbuy" name="idbuy" value="{{idswapbuy}}">
									<button type="submit" class="d-grid btn btn-outline-success mx-auto">Envoyer votre Proposition</button>
								</td>
								<td></td>
							</tr>
						</form>
					</tbody>
				</table>
			</div>


		{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-4 p-2">
				<h1>Register</h1>


				{{ form_start(registrationForm) }}
                
                <div class="d-inline-flex p-2 m-2">
                <label for="Email" class="p-2">Email</label>
				{{ form_row(registrationForm.email, {label: ' '}) }}
                 </div>
                 <div class="d-inline-flex p-2">
                 <label for="Email" class="p-2">Mot de Passe</label>
				{{ form_row(registrationForm.plainPassword, {label: ' '}) }}
                 </div>
                <div class="d-inline-flex ">
                <div class="p-2"><label for="Email" class="p-2">J'accepte les conditions d'utilisation</label></div>
                <div class="mt-3">{{ form_row(registrationForm.agreeTerms, {label: ' '}) }}</div>
                 
				
 </div>
				<button type="submit" class="btn">Register</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="fs-2 col-6 text-center m-3">
				Résultat de la Recherche...
			</div>


			{% if app.request.method == 'POST' %}


				{% if games | length == 0 %}
					<div class="fs-4 col-6 text-center m-3">
						Aucun résultat pour votre recherche.
					</div>
				{% else %}

					<div class="fs-4 col-6 text-center m-3">
						Vos résultats de recherche...
					</div>


					<table class="table table-hover col-8">
						<thead>
							<tr>
								<th scope="col" class="fdtitre"></th>
								<th scope="col" class="fdtitre">Marque</th>
								<th scope="col" class="fdtitre">Modèle</th>
								<th scope="col" class="fdtitre">Catégorie</th>
								<th scope="col" class="fdtitre text-center">Descriptif</th>
								<th scope="col" class="fdtitre">Etat</th>
								<th scope="col" class="fdtitre">Age</th>
								<th scope="col" class="fdtitre">Echange</th>
							</tr>
						</thead>

						<tbody>

							{% for game in games %}



								<tr>
									<th scope="row">
										<a class="nav-link fs-6 text-black-50" title="Proposer aussi le votre ?" href="newgame"><img src="{{ asset('images-test/' ~ game.img ) }}" alt="" style="width:100px"></a>
									</th>
									<td>{{ game.mark }}</td>
									<td>{{ game.nom }}</td>

									
									<td>{{game.idcat.nom}}</td>
									<td>
										<a class="nav-link fs-6 text-black-50" title="Voir le descriptif complet de ce jeu ?" href="detail">{{ game.txt }}</a>
									</td>
									<td>Très bon</td>
									<td>+ de {{ game.age }}</td>
									<td>
										<a class="nav-link fs-6 text-black-50" title="Proposer un échange ?" href="echange">Disponible</a>
										<a class="nav-link fs-6 text-black-50" title="des questions sur ce jeu ?" href="contact">Contact</a>
									</td>
								</tr>


                                        {# <div>
                                            class="mt-3 p-3 bg-light border rounded">
                                            <a href="{{ path('game_show', {'slug': game.slug}) }}">
                                                <h6 class="text-dark">
                                                    <i class="bi bi-arrow-down-right-square-fill text-primary">{{ game.mark }}
                                                        -
                                                    </i>
                                                    {{ game.nom }}</h6>
                                            </a>
                                        </div> #}

							{% endfor %}

						</tbody>
					</table>


				{% endif %}

			{% endif %}

		</div>
	</div>

{% endblock %}

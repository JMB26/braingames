{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-4">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="container">
							<div class="text-center">
								Vous êtes connecté avec l'identifiant :
							</div>
							<div class="text-center">
								{{ app.user.userIdentifier }}
							</div>
							<div class="text-center">
								<a href="{{ path('app_logout') }}">Se déconnecter</a>
							</div>
						</div>
					{% else %}
						<h1 class="h3 mb-3 font-weight-normal">Identifiez vous</h1>
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						<label class="mt-2" for="inputPassword">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="btn btn-lg btn-primary mt-2" type="submit">
							Valider
						</button>

						<a class="nav-link active" aria-current="page" href="{{path('app_check_email')}}">Mot de passe oublié</a>

						<a class="nav-link active" aria-current="page" href="{{path('app_register')}}">S'Enregistrer</a>
					{% endif %}


					{#
																																			        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																			        See https://symfony.com/doc/current/security/remember_me.html
																																			
																																			        <div class="checkbox mb-3">
																																			            <label>
																																			                <input type="checkbox" name="_remember_me"> Remember me
																																			            </label>
																																			        </div>
																																			    #}


				</form>
			</div>
		</div>
	</div>
{% endblock %}

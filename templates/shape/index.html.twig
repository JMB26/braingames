{% extends 'base.html.twig' %}

{% block title %}Shape index
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="fs-2 col-6 text-center m-3">
				Gestion des Etats des Produits...
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="fs-6 col-4 text-center m-3">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Etat</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for shape in shapes %}
							<tr>
								<td>{{ shape.id }}</td>
								<td>{{ shape.etat }}</td>
								<td>									
									<a href="{{ path('app_shape_edit', {'id': shape.id}) }}">Modifier</a>
                                    <a href="{{ path('app_shape_delete', {'id': shape.id}) }}">Supprimer</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3" class="text-center">Aucun Etat Trouvé</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a href="{{ path('app_shape_new') }}">Création d'un Nouvel Etat</a>
			</div>
		</div>
	</div>
{% endblock %}
